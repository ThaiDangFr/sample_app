<% if object.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(object.errors.count, "erreur") %> 
        ont empêché l'enregistrement de <%= object.class.to_s.underscore.humanize.downcase %>.</h2>
    <ul>
    <p>Merci de corriger</p>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
